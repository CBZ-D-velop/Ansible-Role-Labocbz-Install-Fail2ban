[DEFAULT]

# Ban hosts for one hour:
bantime = 3600

# Override /etc/fail2ban/jail.d/00-firewalld.conf:
banaction = iptables-multiport

# Email notifications:
destemail = {{ install_fail2ban__report_email_address }}
sendername = Fail2Ban

# Choose which log file to scan:
logpath  = /var/log/auth.log

# Specify the services to monitor:
[sshd]
enabled = true
port    = {{ install_fail2ban__ssh_port }}
